<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextHeader1">
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextHeader2">
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextHeader3">
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextHeader4">
        <item name="android:textSize">13sp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextHeader5">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextHeader6">
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">300</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextBody1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="TextBody2">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

</resources>